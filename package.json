{
  "name": "unfault",
  "displayName": "Unfault",
  "description": "Production readiness context in VS Code. See impact, risks, and safeguards as you code",
  "version": "0.9.19",
  "publisher": "unfault",
  "homepage": "https://unfault.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/unfault/vscode"
  },
  "bugs": {
    "url": "https://github.com/unfault/vscode/issues"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "cognitive",
    "context",
    "impact",
    "risk",
    "linter",
    "production-readiness",
    "stability",
    "performance",
    "reliability",
    "python",
    "go",
    "rust",
    "typescript"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "icons": {
      "unfault-logo": {
        "description": "Unfault logo",
        "default": {
          "fontPath": "./icons/font/unfault-icons.woff2",
          "fontCharacter": "\\F101"
        }
      }
    },
    "commands": [
      {
        "command": "unfault.showWelcome",
        "title": "Welcome & Setup",
        "category": "Unfault"
      },
      {
        "command": "unfault.runFaultInjection",
        "title": "Run fault injection for current function",
        "category": "Unfault"
      },
      {
        "command": "unfault.generateFaultScenarios",
        "title": "Generate fault scenarios for current function",
        "category": "Unfault"
      },
      {
        "command": "unfault.restartServer",
        "title": "Restart Unfault LSP Server",
        "category": "Unfault"
      },
      {
        "command": "unfault.showMenu",
        "title": "Show Unfault Menu",
        "category": "Unfault"
      },
      {
        "command": "unfault.showOutput",
        "title": "Show Unfault Output",
        "category": "Unfault"
      },
      {
        "command": "unfault.openSettings",
        "title": "Open Unfault Settings",
        "category": "Unfault"
      },
      {
        "command": "unfault.showDependents",
        "title": "Show Files That Depend on This File",
        "category": "Unfault"
      },
      {
        "command": "unfault.openContext",
        "title": "Open Context Sidebar",
        "category": "Unfault"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "unfault.contextView",
          "name": "Unfault: Context",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Unfault",
      "properties": {
        "unfault.executablePath": {
          "type": "string",
          "default": "unfault",
          "description": "Path to the unfault CLI executable. Can be just 'unfault' if it's in your PATH."
        },
        "unfault.verbose": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging for the LSP server. Useful for debugging analysis issues."
        },
        "unfault.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "unfault.codeLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable code lenses that show function impact information above functions."
        },
        "unfault.codeLens.clickToOpen": {
          "type": "boolean",
          "default": true,
          "description": "When clicking a code lens, open the Unfault context sidebar."
        },
        "unfault.diagnostics.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Show Unfault insights as editor squiggles (diagnostics). Disabled by default for a calmer experience."
        },
        "unfault.diagnostics.minSeverity": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ],
          "default": "high",
          "description": "Minimum severity to show as diagnostics when diagnostics are enabled."
        },
        "unfault.fault.executablePath": {
          "type": "string",
          "default": "fault",
          "description": "Path to the fault CLI executable. Can be just 'fault' if it's in your PATH."
        },
        "unfault.fault.baseUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8000",
          "description": "Base URL used to build a runnable HTTP URL from a route (method/path) when generating a fault scenario."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run clean && npm run build",
    "clean": "rm -rf out dist",
    "compile": "tsc -p ./",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "npm run build -- --watch",
    "watch:tsc": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "icons": "fantasticon icons/svg -o icons/font --name unfault-icons --font-types woff2 --asset-types json"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "fantasticon": "^4.1.0",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3"
  }
}
