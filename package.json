{
  "name": "unfault",
  "displayName": "Unfault",
  "description": "Production-readiness linting for your code - detect stability, performance, and reliability issues before they reach production",
  "version": "0.9.0",
  "publisher": "unfault",
  "homepage": "https://unfault.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/unfault/vscode"
  },
  "bugs": {
    "url": "https://github.com/unfault/vscode/issues"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "linter",
    "production-readiness",
    "stability",
    "performance",
    "reliability",
    "python",
    "go",
    "rust",
    "typescript"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "icons": {
      "unfault-logo": {
        "description": "Unfault logo",
        "default": {
          "fontPath": "./icons/font/unfault-icons.woff2",
          "fontCharacter": "\\F101"
        }
      }
    },
    "commands": [
      {
        "command": "unfault.showWelcome",
        "title": "Welcome & Setup",
        "category": "Unfault"
      },
      {
        "command": "unfault.restartServer",
        "title": "Restart Unfault LSP Server",
        "category": "Unfault"
      },
      {
        "command": "unfault.showMenu",
        "title": "Show Unfault Menu",
        "category": "Unfault"
      },
      {
        "command": "unfault.showOutput",
        "title": "Show Unfault Output",
        "category": "Unfault"
      },
      {
        "command": "unfault.openSettings",
        "title": "Open Unfault Settings",
        "category": "Unfault"
      },
      {
        "command": "unfault.showDependents",
        "title": "Show Files That Depend on This File",
        "category": "Unfault"
      },
      {
        "command": "unfault.openContext",
        "title": "Open Context Sidebar",
        "category": "Unfault"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "unfault.contextView",
          "name": "Unfault: Context"
        }
      ]
    },
    "configuration": {
      "title": "Unfault",
      "properties": {
        "unfault.executablePath": {
          "type": "string",
          "default": "unfault",
          "description": "Path to the unfault CLI executable. Can be just 'unfault' if it's in your PATH."
        },
        "unfault.verbose": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging for the LSP server. Useful for debugging analysis issues."
        },
        "unfault.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "unfault.codeLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable code lenses that show function impact information above functions."
        },
        "unfault.codeLens.clickToOpen": {
          "type": "boolean",
          "default": true,
          "description": "When clicking a code lens, open the Unfault context sidebar."
        },
        "unfault.diagnostics.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Show Unfault insights as editor squiggles (diagnostics). Disabled by default for a calmer experience."
        },
        "unfault.diagnostics.minSeverity": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ],
          "default": "high",
          "description": "Minimum severity to show as diagnostics when diagnostics are enabled."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "icons": "fantasticon icons/svg -o icons/font --name unfault-icons --font-types woff2 --asset-types json"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "fantasticon": "^3.0.0",
    "typescript": "^5.3.2"
  }
}
